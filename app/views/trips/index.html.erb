<div class="m-3 justify-content-center text-center">
  <div class="d-flex justify-content-center m-3">

    <%# Barra de bÃºsqueda %>
    <div>
      <%= form_tag trips_path, class:"d-flex", method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control me-2",
          placeholder: "Find a trip"%>
      <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>

    <%# Boton crear viaje %>
    <div>
      <%= link_to 'Publicar Viaje', new_trip_path, class:"btn btn-primary ms-2" %>
    </div>
  </div>
  <h1>Viajes disponibles</h1>
</div>

<div class="container">
  <% @trips.each do |trip| %>
    <% if (trip.capacity - trip.passengers_count) > 0 %>
      <%= render 'shared/trip_card', trip: trip %>
    <% end %>
  <% end %>
</div>
